      "label": "Heading"
    },
    {
      "type": "text",
      "id": "box2_description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Box 3"
    },
    {
      "type": "color",
      "id": "box3_bgcolor",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "box3_heading",
