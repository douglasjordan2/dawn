<link rel="stylesheet" href="{{ 'section-image-with-info-boxes.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-image-with-info-boxes.css' | asset_url | stylesheet_tag }}</noscript>

<div id="image-with-info-boxes--{{ section.id }}" class="image-with-info-boxes">
  <h4>{{ section.settings.heading }}</h4>
  <p>{{ section.settings.sub_heading }}</p>

  <div class="image-with-info-boxes__content{% if section.settings.image_position == 'left' %} image-with-info-boxes__content--reverse{% endif %}">
    <div class="image-with-info-boxes__content-right">
      <div class="info-box" style="background-color: {{ section.settings.box1_bgcolor }}">
        <h3>{{ section.settings.box1_heading }}</h3>
        <p>{{ section.settings.box1_description }}</p>
      </div>
      <div class="info-box" style="background-color: {{ section.settings.box2_bgcolor }}">
        <h3>{{ section.settings.box2_heading }}</h3>
        <p>{{ section.settings.box2_description }}</p>
      </div>
      <div class="info-box" style="background-color: {{ section.settings.box3_bgcolor }}">
        <h3>{{ section.settings.box3_heading }}</h3>
        <p>{{ section.settings.box3_description }}</p>
      </div> 
    </div>

    <div class="image-with-info-boxes__content-left">
      <img src="{{ section.settings.image | img_url: 'original' }}">
    </div>
  </div>
</div>

<style>
#image-with-info-boxes--{{ section.id }} {
  background-color: {{ section.settings.bg_color }};
}
</style>

{% schema %}
{
  "name": "Image with Info Boxes",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "radio",
      "id": "image_position",
      "label": "Image Position",
      "default": "right",
      "options": [
        {
          "label": "Right",
          "value": "right"
        },
        {
          "label": "Left",
          "value": "left"
        }
      ]
    },
    {
      "type": "header",
      "content": "Box 1"
    },
    {
      "type": "color",
      "id": "box1_bgcolor",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "box1_heading",
      "label": "Heading"
    },
    {
      "type": "text",
