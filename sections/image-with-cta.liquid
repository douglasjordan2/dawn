<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

<div class="image-with-cta">
  <h3>
    {{ section.settings.heading }}
  </h3>
  <img src="{{ section.settings.image | img_url: '520x' }}">
  <button class="global__button global__button--full">
    <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
  </button>
</div>

{% schema %}
{
  "name": "Image with CTA",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "CTA text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "CTA link"
    }
  ],
  "presets": [
    {
      "name": "Image with CTA"
    }
  ]
}
{% endschema %}
