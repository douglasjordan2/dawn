<link rel="stylesheet" href="{{ 'section-image-with-cta.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-image-with-cta.css' | asset_url | stylesheet_tag }}</noscript>

<div id="image-with-cta--{{ section.id }}" class="image-with-cta">
  <div class="image-with-cta__content">
    <h3>
      {{ section.settings.heading }}
    </h3>
    <img src="{{ section.settings.image | img_url: 'original' }}">
    <button class="global__button">
      <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
    </button>
  </div>
</div>

<style>
#image-with-cta--{{ section.id }} {
  background-color: {{ section.settings.bg_color }};
}
</style>

{% schema %}
{
  "name": "Image with CTA",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "CTA text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "CTA link"
    }
  ],
  "presets": [
    {
      "name": "Image with CTA"
    }
  ]
}
{% endschema %}
