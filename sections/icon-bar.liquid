<link rel="stylesheet" href="{{ 'section-image-with-cta.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-image-with-cta.css' | asset_url | stylesheet_tag }}</noscript>

<div id="icon-bar--{{ section.id }}" class="icon-bar">
  <ul>
    {% for block in section.block %}
      <li>
        <img src="{{ block.settings.icon_img }}">
        <p>{{ block.settings.icon_description }}</p>
      </li>
    {% endfor %}
  </ul>
</div>

<style>
#icon-bar--{{ section.id }} {
  background-color: {{ section.settings.bg_color }};
}
</style>

{% schema %}
{
  "name": "Icon Bar",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_img",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "icon_description",
          "label": "Icon Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Bar"
    }
  ]
}
{% endschema %}
