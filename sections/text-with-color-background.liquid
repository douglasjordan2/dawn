<link rel="stylesheet" href="{{ 'section-text-with-color-background.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-text-with-color-background.css' | asset_url | stylesheet_tag }}</noscript>

<div id="text-with-color-background--{{ section.id }}" class="text-with-color-background">
  <h3>{{ section.settings.heading }}</h3> 
  <p>{{ section.settings.sub_heading }}</p>
</div>

<style>
#text-with-color-background--{{ section.id }} {
  background-color: {{ section.settings.bg_color }};
}
</style>

{% schema %}
{
  "name": "Icon Bar",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading"
    }

  ],
  "presets": [
    {
      "name": "Icon Bar"
    }
  ]
}
{% endschema %}
