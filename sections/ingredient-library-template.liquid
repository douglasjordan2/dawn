<div class="ingredient-library-letter" id="{{ letter }}">
  <ul>
    {% for block in section.blocks %}
      <li>
        <h4>{{ block.settings.ingredient_name }}</h4>
        <p>{{ block.settings.ingredient_description }}</p>
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "Ingredient Library Letter",
  "tag": "section",
  "settings": [
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "ingredient",
      "settings": [
        {
          "type": "text",
          "id": "ingredient_name",
          "label": "Ingredient Name"
        },
        {
          "type": "text",
          "id": "ingredient_description",
          "label": "Ingredient Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredient Library Letter"
    }
  ]
}
{% endschema %}
