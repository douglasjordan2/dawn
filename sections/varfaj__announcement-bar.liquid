<div style="background-color: {{ section.settings.bg_color }}; padding: {{ section.settings.padding }}px 0;" class="announcement-bar color-{{ block.settings.color_scheme }}" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
  {%- if section.settings.announcement != blank -%}
    {%- if section.settings.link != blank -%}
      <a href="{{ section.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
    {%- endif -%}
        <p class="announcement-bar__message h5">
          {{ section.settings.announcement | escape }}
          {%- if section.settings.link != blank -%}
            {% render 'icon-arrow' %}
          {%- endif -%}
        </p>
    {%- if section.settings.link != blank -%}
      </a>
    {%- endif -%}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color"
    },
    {
      "type": "text",
      "id": "announcement",
      "label": "Announcement"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding (top and bottom)",
      "min": 0,
      "max": 25,
      "step": 1,
      "default": 16
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
    }
  ],
  "default": {
  }
}
{% endschema %}
